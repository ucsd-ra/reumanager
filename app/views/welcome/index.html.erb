<div id="welcome">
	<%= render :partial => "layouts/header_text" %>
	
	<div class="center" id="images">
		<%= image_tag("pier.jpg")%>
		<%= image_tag("cruiseshot.jpg")%>
		<%= image_tag("wall.jpg")%>
	</div>
	
  <%= textilize Setting.general_description %>

	<hr />

	<div class="span-8">
    <%= textilize Setting.highlights %>
	</div>
	<div class="span-6">
    <%= textilize Setting.eligibility_requirements %>
	</div>
	<div class="span-10 last">
    <%= textilize Setting.application_information %>
	</div>
	
	<br class='clear'/>
	<% if app_in_progress? -%>
	  <% if current_user %>
    	<h3 class='clear center red'>Application Deadline <%= Setting.application_deadline.to_date.strftime("%B %d, %Y") %></h3>
	    <h1 class="padded center clears"><b><%= link_to "Application Status", { :controller => 'users', :action => 'status' }, :class => "bordered colored rounded", :id => "apply_now" %></b></h1>
	  <% else -%>
    	<h3 class='clear center red'>Application Deadline <%= Setting.application_deadline.to_date.strftime("%B %d, %Y") %></h3>
    	<h1 class="padded center clear"><b><%= link_to "Apply Now", { :controller => 'users', :action => 'new' }, :class => "bordered colored rounded", :id => "apply_now" %></b></h1>
    <% end -%>
	<% else -%>
  	<h1 class="padded center clears"><b><%= link_to "Application Status", { :controller => 'users', :action => 'status' }, :class => "bordered colored rounded", :id => "apply_now" %></b></h1>
  	<h3 class='clear'><b>Please check back in <%= Setting.check_back_date.to_date.strftime("%B") %> for Summer <%= Setting.check_back_date.to_date.year %> Information</b></h3>
	<% end -%>
	
</div>
